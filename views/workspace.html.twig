{% extends 'layout.html.twig' %}

{% block content %}
<div ng-app="browserApp">
  <div ng-init="repository='{{ repository }}';workspace='{{ workspace }}';path='{{ path }}';baseUrl='{{ path('browser.repositories') }}'">
    <div class="col-lg-12 btnbar">
      <a href="{{ path('browser.workspaces', { repository: repository }) }}" class="btn btn-default">
        <span class="glyphicon glyphicon-chevron-left"></span> Go Back To Workspaces
      </a>
      <span class="lead pull-right">{{ repository }} / {{ workspace }}
      </span>
    </div>
    <div id="sidebar" data-ng-controller="TreeCtrl">
        <div class="scrollable">
          <ul class="tree" id="tree">
             <li data-ng-repeat="node in tree" tree-node></li>
          </ul>
      </div>
    </div>
    <div id="content" data-ng-controller="PropertiesCtrl"> 
      <div class="scrollable">
        <div id="first-load" data-ng-show="!_first_load">
          <span class="glyphicon glyphicon-refresh"></span>
          <p class="lead">Loading...</p>
        </div>  
        <div data-ng-hide="!hasProperties() || !_first_load" id="property-search">
          {% if 'node.property.create' in currentNode.support %}
          <div class="col-sm-2">
            <a href="#addProperty" data-toggle="modal" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Add property</a>
          </div>
          <div class="input-group col-sm-offset-1 col-sm-9">
            <span class="input-group-addon"><span class="glyphicon glyphicon-search"></span></span>
            <input data-ng-model="search" class="form-control" placeholder="Search by property name">
          </div>
          {% else %}
          <div class="input-group col-lg-12">
            <span class="input-group-addon"><span class="glyphicon glyphicon-search"></span></span>
            <input data-ng-model="search" class="form-control" placeholder="Search by property name">
          </div>
          {% endif %}
        </div>  
        <div id="property-content">
          <table class="table table-striped table-hover" data-ng-hide="!hasProperties() || !_first_load">
              <thead>
                  <th>Property name</th>
                  <th>Property value</th>
              </thead>
              <tbody>
                  <tr data-ng-repeat="(name,value) in properties | propertyNameFilter:search | orderBy:'name'">
                    <td>
                      <span data-ng-bind="name"></span>
                      {% if 'node.property.delete' in currentNode.support %}
                      <a href="#" confirm-click="deleteProperty(name)" confirmation="Are you sure?" title="Delete" class="text-danger pull-right" data-ng-hide="name.slice(0,4) == 'jcr:'">
                        <span class="glyphicon glyphicon-trash"></span>
                      </a>
                      {% endif %}
                    </td>
                    <td property-value></td>
                  </tr>
              </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  {% if 'node.property.create' in currentNode.support %}
  <div class="modal" id="addProperty" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-ng-controller="PropertiesCtrl">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Add a property</h4>
        </div>
        <form action="#" method="post" role="form">
          <div class="modal-body">
            <div class="alert alert-info">
              <span class="glyphicon glyphicon-bullhorn"></span> You can not use a name if it is already taken
            </div>
            <div class="form-group">
              <input type="text" ng-model="newName" placeholder="Name of property" class="form-control">
            </div>
            <div class="form-group">
              <input type="text" ng-model="newValue" placeholder="Value of property" class="form-control">
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary" data-ng-click="addProperty(newName,newValue)" data-dismiss="modal">
              <span class="glyphicon glyphicon-plus"></span> Add a new property
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
  {% endif %}
</div>
{% endblock content %}
{% block javascript %}
  <script src="/components/angular/angular.min.js"></script>
  <script src="/components/lodash/dist/lodash.min.js"></script>
  <script src="/components/restangular/dist/restangular.min.js"></script>

  <script src="/assets/js/browser/app.js"></script>
  <script src="/assets/js/browser/service/recursionHelper.js"></script>
  <script src="/assets/js/browser/service/locationProvider.js"></script>
  <script src="/assets/js/browser/service/api.js"></script>
  <script src="/assets/js/browser/controller/tree.js"></script>
  <script src="/assets/js/browser/controller/properties.js"></script>
  <script src="/assets/js/browser/controller/breadcrumb.js"></script>
  <script src="/assets/js/browser/directive/breadcrumbElement.js"></script>
  <script src="/assets/js/browser/directive/propertyValue.js"></script>
  <script src="/assets/js/browser/directive/treeNode.js"></script>
  <script src="/assets/js/browser/directive/confirmClick.js"></script>
{% endblock javascript %}
